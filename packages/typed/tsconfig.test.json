{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.jsonc",
  "include": [
    "test",
    "dtslint",
    "benchmark"
  ],
  "references": [
    {
      "path": "tsconfig.src.json"
    }
  ],
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "outDir": ".tsbuildinfo/test",
    "noEmit": true,
    "erasableSyntaxOnly": false,
    "baseUrl": ".",
    "paths": {
      "effect": [
        "src/index.ts"
      ],
      "effect/*": [
        "src/*/index.ts",
        "src/*.ts"
      ],
      "@typed/fx": [
        "src/fx/index.ts"
      ],
      "@typed/fx/*": [
        "src/fx/*/index.ts",
        "src/fx/*.ts"
      ],
      "@typed/vitest": [
        "src/vitest/index.ts"
      ],
      "@typed/vitest/*": [
        "src/vitest/*/index.ts",
        "src/vitest/*.ts"
      ]
    },
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "@effect/language-service",
        "namespaceImportPackages": []
      }
    ]
  }
}
