{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.jsonc",
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../effect/tsconfig.src.json"
    },
    {
      "path": "../vitest/tsconfig.src.json"
    }
  ],
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "outDir": ".tsbuildinfo/src",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@typed/*": [
        "src/*.ts",
        "src/*/index.ts"
      ]
    },
    "lib": [
      "DOM",
      "ES2022"
    ]
  }
}
